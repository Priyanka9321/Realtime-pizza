<section class="login flex justify-center items-center min-h-screen">
  <!-- Use flex and justify-center to horizontally center the content -->
  <div class="bg-white rounded-lg shadow-lg p-6 w-80">
    <!-- Content within the card -->
    <div class="sm:mx-auto sm:w-full sm:max-w-sm">
      <form action="/login" method="POST" class="space-y-6" method="POST">
        <% if (messages.error) { %>
          <span class="text-red-500 text-sm"><%= messages.error %></span>
        <% } %>
        <!-- Email input field -->
        <div>
          <label for="email" class="block text-sm font-medium leading-6 text-gray-900">Email</label>
          <div class="mt-2">
            <input
              id="email"
              name="email"
              type="email"
              autocomplete="Email"
              placeholder="Enter your email"
              class="block w-full rounded-md border-0 py-1.5 px-2 text-gray-900 ring-gray-300 placeholder:text-gray-400 shadow-sm ring-1 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6 focus:outline-none"
            />
          </div>
        </div>

        <!-- Password input field with forgot password link -->
        <div class="flex flex-col"> <!-- Added flex-col class for vertical alignment -->
          <div class="flex items-center justify-between mt-4"> <!-- Adjusted margin top -->
            <label for="password" class="block text-sm font-medium leading-6 text-gray-900">Password</label>
            <div class="text-sm">
              <a href="#" class="font-semibold text-indigo-600 hover:text-indigo-500">Forgot password?</a>
            </div>
          </div>
          <div class="mt-2"> <!-- Adjusted margin top -->
            <input
              id="password"
              name="password"
              type="password"
              autocomplete="current-password"
              placeholder="****************"
              class="block w-full rounded-md border-0 py-1.5 px-2 text-gray-900 ring-gray-300 placeholder:text-gray-400 shadow-sm ring-1 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6 focus:outline-none"
            />
          </div>
        </div>

        <!-- Sign-in button -->
        <div>
          <button
            type="submit"
            class="btn-primary flex w-full justify-center rounded-md px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600"
          >
            Log In
          </button>
        </div>
      </form>

      <!-- Register link -->
      <p class="mt-10 text-center text-sm text-gray-500">
        Don't have an account?
        <a href="/register" class="font-semibold leading-6 text-indigo-600 hover:text-indigo-500">Register</a>
      </p>
    </div>
  </div>
</section>
